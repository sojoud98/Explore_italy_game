<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Language">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/pizza"></ImageView>

    <TextView
        android:id="@+id/timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="127dp"
        android:layout_marginTop="71dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#fff"
        android:textSize="50sp"
        android:translationZ="10dp"
        android:visibility="visible" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/ch1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/topcornered"
                android:backgroundTint="@color/mainColor"
                android:gravity="center"
                android:text="Choice 1"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ch2"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/mainColor"
                android:gravity="center"
                android:text="Choice 2"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ch3"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/mainColor"
                android:gravity="center"
                android:text="Choice 3"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ch4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bottomcornered"
                android:backgroundTint="@color/mainColor"
                android:gravity="center"
                android:text="Choice 4"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8A8C8B"
        android:backgroundTint="#8A8C8B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10sp"
            android:text="Score: 100"

            android:textColor="#fff"
            android:textSize="20sp"
            android:translationZ="4dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/nextbtn"
        android:layout_width="34dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="249dp"
        app:srcCompat="@drawable/next" />

    <Button
        android:id="@+id/guess"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/circle"
        android:drawableBottom="@drawable/eye"
        android:elevation="10dp"
        android:foregroundGravity="center"
        android:paddingBottom="15dp"
        android:textColor="#fff"
        android:textSize="50sp"
        android:translationZ="100dp"
        android:visibility="visible" />

</RelativeLayout>